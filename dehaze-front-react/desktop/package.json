{
  "name": "dehaze-front-desktop",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "MIT",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "dev": "tsc --watch && cross-env NODE_ENV=development electron .",
    "build:win64": "electron-builder -w --x64",
    "build:linux64": "electron-builder -l --x64",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.pei.dehaze-front-desktop",
    "productName": "图像去雾系统",
    "files": [
      "../dist/*",
      "src/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {}
}
